{% extends 'base.html.twig' %}

{% block title %} Connexion {% endblock %}

{% block header_img %}<img class="w-100" src="{{ asset('img/todolist_homepage.jpg') }}" alt="todo list">{% endblock %}

{% block body %}
    <form method="post" class="mt-3">

        {% if error %}
            <div class="mt-3">
                <div class="alert alert-danger alert-dismissible fade show p-3" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        {% endif %}

        <div class="row">
            <div class="col-12 col-sm-6 col-md-4">
                <label for="inputUsername" class=""><strong> Nom d'utilisateur : </strong></label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>            
            </div>
            <div class="col-12 col-sm-6 col-md-4">
                <label for="inputPassword" class=""><strong> Mot de passe : </strong></label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>              
            </div>
            <div class="col-12 col-sm-6 col-md-4 d-md-flex mt-3 m-md-0">
                <button class="btn btn-success ms-auto mt-auto" type="submit"> Connexion </button>
            </div>
        </div>

        <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}">

    </form>
{% endblock body %}
